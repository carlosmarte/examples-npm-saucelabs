# Saucelabs Credentials (Required)
# Get these from https://app.saucelabs.com/user-settings
SAUCE_USERNAME=your_saucelabs_username
SAUCE_ACCESS_KEY=your_saucelabs_access_key

# Test Configuration
# The URL to test for accessibility
TEST_URL=https://webdriver.io/

# Browser Configuration
BROWSER_NAME=chrome
BROWSER_VERSION=latest
PLATFORM_NAME=macOS 12

# Saucelabs Configuration (Optional)
# Region: us-east-1, eu-central-1, etc.
SAUCE_REGION=us-east-1
# Data Center: us, eu, etc.
SAUCE_DATA_CENTER=us

# Accessibility Testing Configuration (Optional)
# Comma-separated list of rules to test
# Options: wcag2a, wcag2aa, wcag2aaa, wcag21a, wcag21aa, section508, best-practice
AXE_RULES=wcag2a,wcag2aa

# Output Configuration (Optional)
OUTPUT_DIR=.tmp
OUTPUT_FILENAME=axe-report.json
# Show violation details in console output
OUTPUT_CONSOLE=true

# Logging Configuration (Optional)
# WebDriver log level: trace, debug, info, warn, error, silent
LOG_LEVEL=error
# Enable detailed error output
DEBUG=false

# Execution Configuration (Optional)
# Set to false to run tests locally without Saucelabs
RUN_ON_SAUCELABS=true

# Test Metadata (Optional)
TEST_NAME=Accessibility Test